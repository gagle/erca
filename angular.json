{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "erca": {
      "root": "src/ng",
      "sourceRoot": "src/ng",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "build/ng",
            "index": "src/ng/index.html",
            "main": "src/ng/main.ts",
            "polyfills": "src/ng/polyfills.ts",
            "tsConfig": "src/ng/tsconfig.app.json",
            "assets": [
              "src/ng/assets",
              "src/ng/favicon.ico"
            ],
            "styles": [
              "src/ng/styles.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": ["src/ng/styles"]
            },
            "scripts": []
          },
          "configurations": {
            "development": {
              "optimization": false,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true
            },
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/ng/environments/environment.ts",
                  "with": "src/ng/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "erca:build"
          },
          "configurations": {
            "development": {
              "browserTarget": "erca:build:development"
            },
            "production": {
              "browserTarget": "erca:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "erca:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/ng/test.ts",
            "polyfills": "src/ng/polyfills.ts",
            "tsConfig": "src/ng/tsconfig.spec.json",
            "karmaConfig": "src/ng/karma.conf.js",
            "styles": [
              "src/ng/styles.scss"
            ],
            "scripts": [],
            "assets": [
              "src/ng/favicon.ico",
              "src/ng/assets"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/ng/tsconfig.app.json",
              "src/ng/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "erca-e2e": {
      "root": "e2e/",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "erca:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "erca:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": "e2e/tsconfig.e2e.json",
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "app",
      "styleext": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "app"
    }
  },
  "defaultProject": "erca"
}
